<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/sky"
    tools:context="com.example.android.airfarescanner.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#cccccccc"
        android:padding="15dp"
        >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="10dp"
        android:id="@+id/linearLayout1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/Source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/fromAirport"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />





        <TextView
            android:id="@+id/Destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To"
            android:textSize="18sp"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/toAirport"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:id="@+id/linearLayout3"
        android:paddingBottom="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Depart"
        android:id="@+id/departDate"
        android:textStyle="bold"
        android:singleLine="false"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        />


        <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/departDateText"
            android:layout_weight="1" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Arrive"
        android:id="@+id/arriveDate"
        android:textStyle="bold"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="10dp"

         />

        <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/arriveDateText"
            android:layout_weight="1" />
    </LinearLayout>

    <View
        android:id="@+id/SplitLine_hor1"
        android:layout_width="match_parent"
        android:layout_height= "2dp"
        android:background="#343D39"
        android:layout_below="@+id/linearLayout3"

        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout3"
        android:id="@+id/linearLayout"
        android:paddingTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/linearLayout3"
        android:layout_alignStart="@+id/linearLayout3"
        android:weightSum="1">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Adults"
            android:textStyle="bold"
            android:id="@+id/numberAdults"
            android:scaleX="0.80"
            android:scaleY="0.80"

            android:singleLine="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Spinner
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:id="@+id/adultsCount"
            android:textStyle="bold"
            android:spinnerMode="dropdown"
            android:layout_toRightOf="@+id/numberAdults"
            />

        <View
            android:id="@+id/SplitLine_vert1"
            android:layout_width="2dp"
            android:layout_height= "40dp"
            android:background="#343D39"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"

            />
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Children"
            android:textStyle="bold"
            android:id="@+id/numberChild"
            android:scaleX="0.80"
            android:scaleY="0.80"
            android:singleLine="true"
            />

        <Spinner
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:id="@+id/childCount"
            android:textStyle="bold"
            android:spinnerMode="dropdown"
            android:layout_toRightOf="@+id/numberChild" />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Class"
        android:textStyle="bold"
        android:id="@+id/nameOfClass"
        android:scaleX="0.80"
        android:scaleY="0.80"
        android:textAlignment="center"
        android:singleLine="false"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="26dp" />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:id="@+id/spinner"
        android:textStyle="bold"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/linearLayout"
        android:layout_toRightOf="@+id/nameOfClass"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:textStyle="bold"
        android:id="@+id/button"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp" />


</RelativeLayout>


</RelativeLayout>
